			name = aName;
		} else if (aName.equals("carbon dioxyde")) { 
			listAtomsComputer.add(new Atom("C"));
			listAtomsComputer.add(new Atom("O"));
			listAtomsComputer.add(new Atom("O"));
			name = aName;
		}
	}
	
