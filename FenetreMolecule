import javax.swing.JFrame; 
import javax.swing.JLabel;
import java.awt.Color;
import java.awt.Font;


public class FenetreMolecule extends JFrame implements ActionListener {
public FenetreMolecule (){
    this.setTitle("the molecule you are building:");
    this.setSize(800,800);
    this.setLocation(300,200);
    this.setDefaultCloseOperation(
    
    //title of the window
    JLabel build = new JLabel();
    Font police = new Font("Arial",Font.BOLD,20);
    build.setFont(police);
    build.setText("Build A Molecule!");
    build.setBounds(10,10,700,114);
    build.setForeground(Color.magenta);
    add(build);
    
    //panel that gathers the atoms feature
    JPanel atomContainer = new JPanel();
    atomContainer.setLayout(null);
    atomContainer.setBounds(400,286,400,143);
    add(atomContainer); 
    
    JLabel atoms = new JLabel();
    Font police2 = new Font("Serif",Font.BOLD,15);
    atoms.setFont(police2); 
    atoms.setText("Atoms");
    atoms.setBounds(430,314,230,114);
    atoms.setForeground(Color.red);
    atomContainer.add(atoms);
    
    //definition of the atom buttons 
    JButton carbon = new JButton("C");
    carbon.setBounds(429,371,57,57);
    
    JButton oxygen = new JButton("O");
    oxygen.setBounds(548,371,57,57);
    
    JButton hydrogen = new JButton("H");
    hydrogen.setBounds(667,371,57,57);
    
    JButton nitrogen = new JButton("N");
    nitrogen.setBounds(786,371,57,57);
    
    //adding the atoms buttons in their dedicated container
    atomContainer.add(carbon);
    atomContainer.add(oxygen);
    atomContainer.add(hydrogen);
    atomContainer.add(nitrogen);
    
    
    

